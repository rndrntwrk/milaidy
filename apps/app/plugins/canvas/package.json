{
  "name": "@milaidy/capacitor-canvas",
  "version": "1.0.0",
  "description": "Milaidy Canvas Plugin for Capacitor - A2UI integration and canvas rendering",
  "main": "./dist/plugin.cjs.js",
  "module": "./src/index.ts",
  "types": "./dist/plugin.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources/",
    "ios/Plugin.xcodeproj/",
    "electron/",
    "*.podspec"
  ],
  "author": "Milaidy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/milady-ai/milaidy"
  },
  "scripts": {
    "build": "npm run clean && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^8.0.0"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "milaidy": {
    "platforms": ["browser", "node"],
    "runtime": "both",
    "platformDetails": {
      "browser": "Full support via HTML5 Canvas API (drawing, layers, web view, A2UI bridge)",
      "node": "Full support via Electron native canvas and web view integration",
      "ios": true,
      "android": true
    }
  }
}
