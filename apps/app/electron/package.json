{
  "name": "Milady",
  "version": "2.0.0-alpha.27",
  "description": "Cute agents for the acceleration",
  "homepage": "https://github.com/milady-ai/milady",
  "author": {
    "name": "Milady AI",
    "email": "hi@milady.ai"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/milady-ai/milady.git"
  },
  "license": "MIT",
  "main": "build/src/index.js",
  "scripts": {
    "build": "tsc && electron-rebuild",
    "build:whisper": "bash ./scripts/build-whisper-universal.sh",
    "electron:start-live": "node ./live-runner.js",
    "electron:start": "bun run build && electron --inspect=5858 ./",
    "electron:pack": "bun run build && bun run build:whisper && electron-builder build --dir -c ./electron-builder.config.json",
    "electron:make": "bun run build && bun run build:whisper && electron-builder build -c ./electron-builder.config.json -p always",
    "electron:make:dmg:test": "bun run build && bun run build:whisper && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --mac dmg -c ./electron-builder.config.json -p never"
  },
  "dependencies": {
    "@capacitor-community/electron": "^5.0.1",
    "@elizaos/core": "next",
    "@noble/curves": "^2.0.1",
    "bonjour-service": "^1.3.0",
    "chokidar": "~3.5.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "0.45.1",
    "electron-is-dev": "~2.0.0",
    "electron-serve": "~1.1.0",
    "electron-unhandled": "~4.0.1",
    "electron-updater": "^6.8.3",
    "electron-window-state": "^5.0.3",
    "ethers": "^6.16.0",
    "glob": "^13.0.0",
    "handlebars": "^4.7.8",
    "json5": "^2.2.3",
    "pg": "^8.16.3",
    "tslib": "^2.8.1",
    "unique-names-generator": "^4.7.1",
    "whisper-node": "^1.1.1",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "capacitor",
    "electron"
  ]
}
